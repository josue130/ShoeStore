@model ProductDto

<div class="d-flex  justify-content-center ">
    <form method="post">
        <input asp-for="ProductId" hidden />
        <div class=" d-flex p-4">
            <div class="card container overflow-hidden">
                <div class="card-header  row">
                    <div class="col-12 col-md-6">
                        <h1 >@Model.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-end">
                        <h1 class="text-danger">Price: @string.Format("{0:c}", Model.Price)</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container  p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <div class="img-container" onmousemove="zoom(event)" onmouseleave="resetZoom()">
                                    <img src="@Model.ImageUrl" style="border-radius:35px;" width="100%" class="rounded card-img-top" />
                                </div>
                                    
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12">
                                        <h3>Description:</h3>
                                        <p class="text-secondary pt-3">@Html.Raw(Model.Description)</p>
                                    </div>
                                </div>
                                <div class="row mx-0">
                                    <input asp-for="Count" class="form-control" />
                                    <span asp-validation-for="Count" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer row">
                    <div class="col-12 col-md-6 pb-1 ">
                        <a asp-action="Index" class="btn btn-secondary btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 ">
                        <button type="submit" class="btn btn-primary form-control btn-lg" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js"></script>
}

