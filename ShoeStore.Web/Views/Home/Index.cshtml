@model IEnumerable<ProductDto>

<style>
    .card{
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }   
    .card:hover{
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
</style>

<div class="d-flex p-5 justify-content-center">
    <form>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="p-0 my-3">
                        <div class="card ">
                            <h3 class="card-title text-center py-2">@product.Name</h3>
                            <img src="@product.ImageUrl" class="card-img-top h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between py-2">
                                    <span class="text-danger" style="font-size:20px;">
                                        @string.Format("{0:c}", product.Price)
                                    </span>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <a asp-action="ProductDetails"
                                           asp-route-productId="@product.ProductId"
                                           class="btn btn-outline-secondary form-control">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
</div>

