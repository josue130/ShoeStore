@model LoginRequestDto


<div class="d-flex justify-content-center align-items-center min-vh-100">
    <form method="post">
        <div class="container border  p-4">
            <div class="row text-center">
                <h1>Login</h1>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <input asp-for="UserName" class="form-control" placeholder="Username..." />
                    <span asp-validation-for="UserName" class="text-danger" />
                </div>
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <input asp-for="Password" class="form-control" placeholder="Password..." />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="col-12 col-md-6 offset-md-3 pb-2">
                    <button type="submit" class="form-control btn btn-outline-secondary" value="Submit">Login</button>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}